{
  "name": "turborepo-template",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "format": "biome check . --write",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "preinstall": "tsx scripts/update-pm.ts",
    "prepare": "husky",
    "release": "tsx ./scripts/publish.ts",
    "sync": "turborepo-template-upgrade",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "upgrade": "tsx ./scripts/upgrade.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@changesets/cli": "^2.29.7",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "turborepo-template-upgrade": "^0.8.0"
  },
  "packageManager": "pnpm@10.21.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn@<6.0.6": ">=6.0.6",
      "next@>=15.0.0 <15.2.3": ">=15.2.3"
    }
  }
}
