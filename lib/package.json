{
  "name": "tiptap-extension-mermaid",
  "author": "Mayank Kumar Chaudhari (https:/mayank-chaudhari.vercel.app)",
  "private": false,
  "version": "0.0.0",
  "description": "",
  "license": "MPL-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "github:md2docx/tiptap-extension-mermaid",
  "bugs": "https://github.com/md2docx/tiptap-extension-mermaid/issues",
  "homepage": "https://github.com/md2docx/tiptap-extension-mermaid/#readme",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": [
        "./dist/*",
        "./dist/*/index.d.ts"
      ],
      "import": [
        "./dist/*",
        "./dist/*/index.mjs"
      ],
      "require": [
        "./dist/*",
        "./dist/*/index.js"
      ]
    },
    "./dist/*": {
      "types": [
        "./dist/*",
        "./dist/*/index.d.ts"
      ],
      "import": [
        "./dist/*",
        "./dist/*/index.mjs"
      ],
      "require": [
        "./dist/*",
        "./dist/*/index.js"
      ]
    },
    "./*/index.css": "./dist/*/index.css",
    "./dist/*/index.css": "./dist/*/index.css",
    "./index.css": "./dist/index.css",
    "./styles": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig-build.json && gzip -c dist/index.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch && tsc -p tsconfig-build.json -w",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild-plugin-rdi": "^0.0.0",
    "esbuild-plugin-react18": "0.2.6",
    "esbuild-plugin-react18-css": "^0.0.4",
    "jsdom": "^27.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "r18gs": "^3.0.1"
  },
  "peerDependencies": {
    "@types/react": ">=16.8",
    "react": ">=16.8"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/md2docx"
    },
    {
      "type": "github",
      "url": "https:/github.com/sponsors/mayank1513"
    }
  ],
  "keywords": [
    "React",
    "React Loaders",
    "React 18",
    "React 19",
    "Next.js",
    "Next.js 14",
    "Next.js 15",
    "React server components",
    "Customizable",
    "Cutting-edge",
    "Compatibility",
    "Frontend development",
    "UI components",
    "Progressive",
    "Web development",
    "Modern",
    "Seamless integration",
    "mayank1513"
  ]
}